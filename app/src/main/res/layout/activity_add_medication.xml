<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            android:id="@+id/MedicationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/newMedName"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:padding="5dp"/>

        <EditText
            android:id="@+id/editMedicationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:padding="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            android:id="@+id/dosageInt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/newMedDosageText"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:padding="5dp"/>

        <EditText
            android:id="@+id/editDosageInt"
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:maxLength="3"
            android:padding="5dp"/>

        <Spinner
            android:id="@+id/unitList"
            android:layout_width="wrap_content"
            android:layout_height="38sp"
            android:padding="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            android:id="@+id/repeatText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/newMedRepeat1"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:padding="5dp"/>

        <EditText
            android:id="@+id/repeatInt"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:maxLength="3"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/repeatText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/newMedRepeat2"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:padding="5dp"/>
    </LinearLayout>


    <TextView
        android:id="@+id/commentText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="15dp"
        android:text="@string/Comment"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/commentMedication"
        android:layout_width="331dp"
        android:layout_height="60dp"
        android:ems="10"
        android:gravity="start|bottom"
        android:inputType="textMultiLine"
        android:lines="2"
        android:maxLines="5"
        android:scrollbars="vertical"
        android:layout_gravity="center_horizontal"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="531dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <ListView
                android:id="@+id/addMedicationListView"
                android:layout_width="match_parent"
                android:layout_height="163dp"></ListView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="10dp">

                <Button
                    android:id="@+id/addMedTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:padding="10dp"
                    android:text="@string/addTime"
                    app:backgroundTint="#808080" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="    ">
                </TextView>

                <Button
                    android:id="@+id/deleteMedTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:padding="10dp"
                    android:text="@string/deleteTime"
                    app:backgroundTint="#808080" />

            </LinearLayout>


            <Button
                android:id="@+id/addMed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="10dp"
                android:text="@string/addMedicationToReminder" />

            <Button
                android:id="@+id/deleteMed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/deleteButton"
                app:backgroundTint="#808080"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.209"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.904" />

        </LinearLayout>
    </ScrollView>



</LinearLayout>